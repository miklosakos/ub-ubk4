	-DBUILD_TESTING=OFF \
	-DDIGIKAMSC_COMPILE_DOC=OFF \
	-DDIGIKAMSC_COMPILE_LIBKIPI=OFF \
	-DDIGIKAMSC_COMPILE_LIBKSANE=OFF \
	-DDIGIKAMSC_COMPILE_LIBMEDIAWIKI=ON \
	-DDIGIKAMSC_COMPILE_LIBKVKONTAKTE=ON
