+/**
++ * Similar to full_fname, but avoids quotes and comments.
++ **/
+char *full_fname_simple(const char *fn)
+{
+	static char *result = NULL;
+
+	if (result)
+		free(result);
+
+	if (*fn == '/')
+		asprintf(&result, "%s", fn);
+	else
+		asprintf(&result, "%s/%s", curr_dir, fn);
+
+	return result;
+}
+
