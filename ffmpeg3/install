#!/bin/sh -eux

ub_install

mkdir -p "$UB_INSTALLDIR"/usr/include/ffmpeg3/libavutil/x86  "$UB_INSTALLDIR"/usr/include/ffmpeg3/libavformat
cp libavutil/x86/*.h "$UB_INSTALLDIR"/usr/include/ffmpeg3/libavutil/x86/
cp libavformat/*.h "$UB_INSTALLDIR"/usr/include/ffmpeg3/libavformat/

cp config.h "$UB_INSTALLDIR"/usr/include/ffmpeg3/libavformat/

rm -Rf "$UB_INSTALLDIR"/usr/share/ffmpeg
