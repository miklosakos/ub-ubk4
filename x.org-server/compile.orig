autoreconf -vif

ub_compile \
	--enable-config-udev \
	--enable-composite \
	--enable-xres \
	--enable-record \
	--enable-xv \
	--enable-glamor \
	--enable-xvmc \
	--enable-dga \
	--enable-screensaver \
	--enable-xdmcp \
	--enable-xdm-auth-1 \
	--enable-glx \
	--enable-dri \
	--enable-xinerama \
	--enable-xf86vidmode \
	--enable-xace \
	--enable-xcsecurity \
	--enable-xf86bigfont \
	--enable-dpms \
	--enable-dbe \
	--enable-xfree86-utils \
	--enable-xorg \
	--enable-xwayland \
	--enable-dmx \
	--enable-xvfb \
	--enable-xnest \
	--enable-kdrive \
	--enable-xfake \
	--enable-xephyr \
	--enable-secure-rpc \
	--disable-strict-compilation \
	--disable-tslib \
	--disable-xwin \
	--disable-install-setuid \
