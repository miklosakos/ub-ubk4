#!/bin/sh -eux

rm -Rf texmf-dist/doc
rm -Rf texmf-dist/source
rm -Rf texmf-dist/fonts/source
rm -Rf texmf-dist/scripts/context/stubs/{mswin,source,win64}

mv -v texk/web2c/pdftexdir/pdftoepdf-poppler0.86.0.cc texk/web2c/pdftexdir/pdftoepdf.cc
mv -v texk/web2c/pdftexdir/pdftosrc-poppler0.83.0.cc texk/web2c/pdftexdir/pdftosrc.cc

mkdir build
cd build
../configure \
    --prefix=/usr/share \
    --bindir=/usr/bin \
    --datarootdir=/usr/share \
    --includedir=/usr/include \
    --infodir=/usr/share/texmf-dist/doc/info \
    --libdir=/usr/lib \
    --mandir=/usr/share/man \
	--disable-native-texlive-build \
	--disable-static \
	--enable-shared \
	--with-banner-add=/UHU-Linux \
	--with-system-cairo \
	--with-system-fontconfig \
	--with-system-freetype2 \
	--with-system-gd \
	--with-system-gmp \
	--with-system-graphite2 \
	--with-system-harfbuzz \
	--with-system-icu \
	--with-system-libgs \
	--with-system-libpaper \
	--with-system-libpng \
	--with-system-mpfr \
	--with-system-pixman \
	--with-system-poppler \
	--with-system-xpdf \
	--with-system-zlib \
	--with-system-zziplib \
	--with-x \
	--enable-luatex \
	--disable-psutils \
	--disable-t1utils

UB_MAKE_PROCS=1 ub_make
