#!/bin/sh -eux

mv -v texk/web2c/pdftexdir/pdftoepdf-poppler0.86.0.cc texk/web2c/pdftexdir/pdftoepdf.cc
mv -v texk/web2c/pdftexdir/pdftosrc-poppler0.83.0.cc texk/web2c/pdftexdir/pdftosrc.cc

mkdir build
cd build
UB_CONFIGURE_DIR=../ ub_configure \
	--disable-native-texlive-build \
	--with-banner-add=/UHU-Linux \
	--with-system-cairo \
	--with-system-fontconfig \
	--with-system-freetype2 \
	--with-system-gmp \
	--with-system-graphite2 \
	--with-system-harfbuzz \
	--with-system-gd \
	--with-system-icu \
	--with-system-libgs \
	--with-system-libpng \
	--with-system-mpfr \
	--with-system-pixman \
	--with-system-poppler \
	--with-system-xpdf \
	--with-system-zlib \
	--with-system-zziplib \
	--with-x \
	--enable-luatex \
	--disable-psutils \
	--disable-t1utils

UB_MAKE_PROCS=1 ub_make
