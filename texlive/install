#!/bin/sh -eux

cd build
ub_install

# a kpsewhere nélkül rakat hibás szimlink lesz,
# de a kpsewhere csak akkor működik, ha megvan neki a libkpathsea
make DESTDIR="$UB_INSTALLDIR" LD_LIBRARY_PATH="$UB_INSTALLDIR/usr/lib" texlinks

# install perl module
cd ..
mkdir -p "$UB_INSTALLDIR"/usr/share/texlive/tlpkg/TeXLive
install -m644 texk/tests/TeXLive/*.pm "$UB_INSTALLDIR"/usr/share/texlive/tlpkg/TeXLive/

rm "$UB_INSTALLDIR"/usr/bin/latexmk
rm "$UB_INSTALLDIR"/usr/bin/otfinfo
rm -f "$UB_INSTALLDIR"/usr/bin/man

mv "$UB_INSTALLDIR"/usr/share/texlive/applications/xdvi.desktop "$UB_INSTALLDIR"/usr/share/applications/xdvi.desktop
rm -Rf "$UB_INSTALLDIR"/usr/share/texlive/applications
