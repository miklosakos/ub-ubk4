#!/bin/sh -eux

# A -O3 vesz√©lyes
ub_replace -O3 -O2 config.profiles/harmattan/mkspecs/linux-g++-cross/qmake.conf
ub_replace -O3 -O2 mkspecs/aix-xlc-64/qmake.conf
ub_replace -O3 -O2 mkspecs/aix-xlc/qmake.conf
ub_replace -O3 -O2 mkspecs/macx-xlc/qmake.conf
ub_replace -O3 -O2 src/3rdparty/libmng/makefiles/makefile.linux
ub_replace -O3 -O2 src/3rdparty/webkit/Source/JavaScriptCore/JavaScriptCore.pro
ub_replace -O3 -O2 src/3rdparty/zlib/treebuild.xml

export LD_LIBRARY_PATH="$(pwd)"/lib
export CXXFLAGS+="-std=gnu++98"

./configure \
	-platform linux-g++-64 \
	-prefix /usr/lib/qt4 \
	-sysconfdir /etc/xdg \
	\
	-release            \
	-opensource         \
	-confirm-license	\
	-shared             \
	-fast               \
	-largefile          \
	-rpath              \
	-verbose            \
	-silent             \
	-optimized-qmake    \
	-reduce-relocations \
	-no-separate-debug-info \
	\
	-nomake examples    \
	-nomake demos		\
	-nomake docs		\
	\
	-exceptions         \
	-accessibility      \
	-stl                \
	\
	-plugin-sql-mysql -I/usr/include/mysql \
	-plugin-sql-psql -I/usr/include/postgresql -I/usr/include/postgresql/server \
	-plugin-sql-odbc    \
	-plugin-sql-sqlite  \
	-system-sqlite      \
	\
	-no-qt3support      \
	-xmlpatterns  		\
	-multimedia         \
	-audio-backend      \
	-no-phonon          \
	-no-phonon-backend  \
	\
	-svg                \
	-webkit             \
	-javascript-jit     \
	-script             \
	-scripttools        \
	-declarative        \
	\
	-system-zlib        \
	-system-libtiff     \
	-system-libpng      \
	-system-libmng      \
	-system-libjpeg     \
	\
	-openssl-linked     \
	\
	-no-nis             \
	-no-icu				\
	-cups               \
	-iconv              \
	-no-pch             \
	-dbus-linked        \
	\
	-gtkstyle           \
	-no-nas-sound       \
	-opengl             \
	-no-openvg          \
	\
	-sm                 \
	-xshape             \
	-xsync              \
	-xinerama           \
	-xcursor            \
	-xfixes             \
	-xrandr             \
	-xrender            \
	-mitshm             \
	-fontconfig         \
	-xinput             \
	-xkb                \
	\
	-lcrypto            \
	-lcrypt             \
	-lssl               \

ub_make

#some options we may want to use in the future
#	-phonon-backend     \
#	-phonon             \
#	-nomake demos       \
#	-nomake docs
