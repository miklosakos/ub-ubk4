+++ patched/src/steps/patchelf	2018-04-24 03:55:36.463919352 +0200
@@ -0,0 +1,22 @@
+#!/bin/bash -eu
+
+# Change the dynamic loader ("ELF interpreter") of executables
+# /lib64/ld-linux-x86-64.so.2 -> /lib/ld-linux-x86-64.so.2
+
+. /usr/lib/uhubuild/uhubuild-common
+
+cd "$UB_INSTALLDIR"
+
+find . -type f | while read file; do
+	case "$(file -b "$file")" in
+	  *ELF*executable*)
+		echo "  $file"
+		pretendroot patchelf --set-interpreter /lib/ld-linux-x86-64.so.2 "$file" || true
+		;;
+	  *shared*)
+		echo "  $file"
+		pretendroot patchelf --set-interpreter /lib/ld-linux-x86-64.so.2 "$file" || true
+		;;
+	esac
+done
+
