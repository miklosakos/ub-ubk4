#!/bin/sh -eux

sed -ri 's/^=item ([0-9]+)/=item C<\1>/' doc/{apps,crypto,ssl}/*.pod

# A -O3 vesz√©lyes
ub_replace -O3 -O2 Configure

./Configure \
	--prefix=/usr \
	--openssldir=/etc/ssl \
	--libdir=lib/openssl-1.0 \
	linux-x86_64 \
	enable-ec_nistp_64_gcc_128 \
	shared \
	no-sse2 \
	-Wa,--noexecstack \
	no-ssl3-method \
	zlib-dynamic

make depend
make
