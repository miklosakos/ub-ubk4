#!/bin/sh -eux

ub_compile \
    -Dplatforms=x11,drm,wayland \
    -Ddri-drivers=i915,i965,r200,radeon,nouveau \
    -Dgallium-drivers=r300,r600,radeonsi,nouveau,svga,swrast,virgl,swr \
    -Dgallium-extra-hud=true \
    -Dgallium-vdpau=true \
    -Dgallium-xvmc=true \
    -Dgallium-omx=true \
    -Dgallium-xa=true \
    -Dgallium-nine=true \
    -Dgallium-opencl=icd \
    -Dvulkan-drivers=intel,radeon \
    -Dshared-glapi=true \
	-Dgles1=true \
	-Dgles2=true \
	-Dgbm=true \
	-Dglx=dri \
	-Degl=true \
	-Dglvnd=true \
	-Dllvm=true \
	-Dlibunwind=true \
	-Dlmsensors=true \
	-Dtexture-float=true \
	-Dosmesa=gallium
