#!/usr/bin/env dl

mesa-${UB_VERSION}.tar.xz mesa-${UB_VERSION}/
	ftp://ftp.freedesktop.org/pub/mesa/
	ftp://ftp.freedesktop.org/pub/mesa/${UB_VERSION}/
	ftp://ftp.freedesktop.org/pub/mesa/older-versions/${UB_VERSION_HEAD1}.x/${UB_VERSION}/

meson_get_version.py :bin
    https://cgit.freedesktop.org/mesa/mesa/plain/bin/meson_get_version.py?h=mesa-${UB_VERSION}
